<%--Content--%>
<div class="container" style="margin-top: 58px; margin-bottom: 58px">
    <div class="card" style="border: 1px solid #ccc; border-radius: 4px;  margin-bottom: 40px">
        <div class="card-header">
            <h3 class="card-title" style="padding: 16px 10px">Order</h3>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                <tr>
                    <th>Product name</th>
                    <th>Category</th>
                    <th>Quantity</th>
                    <th>Discount</th>
                    <th>Price</th>
                    <th>Total</th>
                </tr>
                </thead>
                <tbody>
                <c:forEach items="${orderItems}" var="orderItem">
                    <tr>
                        <td>${orderItem.productName}</td>
                        <td>${orderItem.productCategory}</td>
                        <td>${orderItem.quantity}</td>
                        <td>${orderItem.percentage}</td>
                        <td>${orderItem.price}</td>
                        <td>${orderItem.price * orderItem.quantity - (orderItem.price * orderItem.quantity * (orderItem.percentage / 100))}</td>
                    </tr>
                </c:forEach>

                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
</div>
